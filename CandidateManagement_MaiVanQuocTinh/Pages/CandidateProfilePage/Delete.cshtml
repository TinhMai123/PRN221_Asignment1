@page
@model CandidateManagement_MaiVanQuocTinh.Pages.Tinh.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-danger">Delete Candidate Profile</h1>
    <p class="lead">Are you sure you want to delete this candidate profile? This action cannot be undone.</p>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-warning text-white">
            <h4>Candidate Profile Details</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Fullname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Fullname)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Birthday)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Birthday)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CandidateProfile.Posting)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CandidateProfile.Posting.PostingId)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form method="post">
            <input type="hidden" asp-for="CandidateProfile.CandidateId" />
            <button type="submit" class="btn btn-danger mr-2">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
