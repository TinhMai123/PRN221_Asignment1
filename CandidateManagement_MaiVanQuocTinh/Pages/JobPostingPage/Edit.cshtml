@page
@model CandidateManagement_MaiVanQuocTinh.Pages.JobPostingPage.EditModel

@{
    ViewData["Title"] = "Edit Job Posting";
}

<h1 class="text-center mb-4">Edit Job Posting</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Job Posting Details</h4>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="JobPosting.PostingId" />

                    <div class="form-group mb-3">
                        <label asp-for="JobPosting.JobPostingTitle" class="form-label"></label>
                        <input asp-for="JobPosting.JobPostingTitle" class="form-control" placeholder="Enter job title" />
                        <span asp-validation-for="JobPosting.JobPostingTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="JobPosting.Description" class="form-label"></label>
                        <textarea asp-for="JobPosting.Description" class="form-control" placeholder="Enter job description" rows="4"></textarea>
                        <span asp-validation-for="JobPosting.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="JobPosting.PostedDate" class="form-label"></label>
                        <input asp-for="JobPosting.PostedDate" class="form-control" placeholder="MM/DD/YYYY" />
                        <span asp-validation-for="JobPosting.PostedDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
