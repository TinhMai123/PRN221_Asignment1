@page
@model CandidateManagement_MaiVanQuocTinh.Pages.JobPostingPage.CreateModel

@{
    ViewData["Title"] = "Create Candidate Profile";
    string roleID = HttpContext.Session.GetString("RoleID");
    if (roleID != "1")
    {
        Response.Redirect("/NotPermission");
    }
}

<div class="container mt-4">
    <h1 class="text-primary">Create Job Posting</h1>
    <p class="text-muted">Fill out the form below to add a new job posting.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="shadow p-4 bg-light rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="JobPosting.PostingId" class="form-label"></label>
                    <input asp-for="JobPosting.PostingId" class="form-control" />
                    <span asp-validation-for="JobPosting.PostingId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="JobPosting.JobPostingTitle" class="form-label"></label>
                    <input asp-for="JobPosting.JobPostingTitle" class="form-control" />
                    <span asp-validation-for="JobPosting.JobPostingTitle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="JobPosting.Description" class="form-label"></label>
                    <textarea asp-for="JobPosting.Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="JobPosting.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="JobPosting.PostedDate" class="form-label"></label>
                    <input asp-for="JobPosting.PostedDate" class="form-control" type="date" />
                    <span asp-validation-for="JobPosting.PostedDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Create Job Posting</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
