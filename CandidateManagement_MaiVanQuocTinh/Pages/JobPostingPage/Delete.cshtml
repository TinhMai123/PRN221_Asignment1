@page
@model CandidateManagement_MaiVanQuocTinh.Pages.JobPostingPage.DeleteModel

@{
    ViewData["Title"] = "Delete Job Posting";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Job Posting</h2>
        </div>

        <div class="card-body">
            <h5 class="card-title text-danger">Are you sure you want to delete this job posting?</h5>
            <p class="text-muted">This action cannot be undone.</p>

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.JobPosting.JobPostingTitle)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.JobPosting.JobPostingTitle)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.JobPosting.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.JobPosting.Description)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.JobPosting.PostedDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.JobPosting.PostedDate)
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form method="post" class="mb-0">
                <input type="hidden" asp-for="JobPosting.PostingId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
